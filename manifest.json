{
  "manifest_version": 2,
  "name": "明镜",
  "version": "1.0",
  "description": "明镜这款小工具主要用于从HTML中提取潜在链接，并优先对同根路径的URL进行资产探测。",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-38.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-38.png",
    "128": "icons/icon-128.png"
  }
}
